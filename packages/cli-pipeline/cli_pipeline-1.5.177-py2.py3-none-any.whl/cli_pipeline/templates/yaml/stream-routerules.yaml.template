apiVersion: config.istio.io/v1alpha2 
kind: RouteRule 
metadata:
  name: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }}-{{ PIPELINE_MODEL_TAG }}
  namespace: {{ PIPELINE_NAMESPACE }}
spec:
  destination: 
     name: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }}-{{ PIPELINE_MODEL_TAG }}
  match:
    request:
      headers:
        uri:
          prefix: /stream/{{ PIPELINE_MODEL_NAME }}/{{ PIPELINE_MODEL_TAG }}/
  rewrite:
    uri: /
  precedence: 2
  route:
  - weight: 100
---
